<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>web</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../arho/channel/web-client/assets/</directory>
			<outputDirectory>/assets</outputDirectory>
		</fileSet>
	<fileSet>
      <directory>src/main/web/conf</directory>
      <outputDirectory>/WEB-INF/classes</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>/WEB-INF/classes</outputDirectory>
    </fileSet>
	<fileSet>
	  <directory>../arho/channel/web-client/config/META-INF/</directory>
	  <outputDirectory>/WEB-INF/classes/META-INF/</outputDirectory>
	</fileSet>
	</fileSets>
	<files>
		<file>
			<source>../arho/channel/web-client/index.html</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<scope>runtime</scope>
			<outputDirectory>WEB-INF/lib/</outputDirectory>
			<includes>
				<include>org.kitchen.arho:arho-ref</include>
				<include>org.kitchen.arho.arho:arho-web-client</include>
				<include>org.kitchen.arho.arho:arho-rest</include>				
				<include>org.springframework:spring-aop</include>
				<include>org.springframework:spring-beans</include>
				<include>org.springframework:spring-context</include>
				<include>org.springframework:spring-core</include>
				<include>org.springframework:spring-expression</include>
				<include>org.springframework:spring-jdbc</include>
				<include>org.springframework:spring-tx</include>
				<include>com.typesafe.akka:akka-actor_2.11</include>				
				<include>com.fasterxml.jackson.core:jackson-core</include>				
				<include>org.scala-lang:scala-library</include>
				<include>org.slf4j:slf4j-api</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>org.apache.commons:commons-lang3</include>
				<include>org.apache.ignite:ignite-core</include>
				<include>org.apache.ignite:ignite-spring</include>
        		<include>org.apache.ignite:ignite-slf4j</include>
				<include>com.fasterxml.jackson.core:jackson-annotations</include>
				<include>com.fasterxml.jackson.core:jackson-databind</include>
				<include>javax.servlet:servlet-api</include>
			</includes>
			<!-- <excludes>
				<exclude>com.nri.trading:trading-ref-service</exclude>
			</excludes> -->
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
	</dependencySets>
</assembly>
